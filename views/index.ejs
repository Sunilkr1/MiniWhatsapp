<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats!</h3>
    <form method="get" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br />
    <% for(let chat of Chats) { %>
        <div class="chat">
            <p>From : <%= chat.from %></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <form method="get" action="/chats/<%= chat.id_%>/edit">
                
                    <button>Edit</button>
                </form>
            </div>
            <p>Recived by <%= chat.to %></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ") [4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
        </div>
        <br> <br>
   <% } %> 
</body>
</html>
